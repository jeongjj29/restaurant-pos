{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"],
      "@constants": ["constants.js"],
      "@routes": ["routes.js"],
      "@store": ["store.js"],
      "@utils": ["utils.js"],
      "@auth": ["features/auth/*"],
      "@employees": ["features/employees/*"],
      "@menu": ["features/menu/*"],
      "@orders": ["features/orders/*"],
      "@payments": ["features/payments/*"],
      "@tables": ["features/tables/*"]
    }
  },
  "include": ["src"]
}
