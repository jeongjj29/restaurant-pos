{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"],
      "@constants": ["constants.ts"],
      "@routes": ["routes.ts"],
      "@store": ["store.ts"],
      "@utils": ["utils.ts"],
      "@auth": ["features/auth/*"],
      "@employees": ["features/employees/*"],
      "@menu": ["features/menu/*"],
      "@orders": ["features/orders/*"],
      "@payments": ["features/payments/*"],
      "@tables": ["features/tables/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
